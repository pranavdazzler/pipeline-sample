pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                echo "build"
            }
        }
        stage("scm pull"){
            steps{
              echo "git pull"
              }
              }
        stage("test"){
            steps{
                echo "test"
            }
        }
    }
    post{
        always{
            emailext body: 'your pipeline has been failed, please go through that.', subject: 'Pipline has been failed', to: 'kadalundip@gmail.com'
        }
    }
}
